<Window x:Class="IE_Faktury.Prawny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IE_Faktury"
        mc:Ignorable="d"
        Title="Prawny" Height="190" Width="300">
    <Grid Margin="-16,10,16,-10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Nazwa" HorizontalAlignment="Left" Height="25" Margin="8.15,20,0,0" VerticalAlignment="Top" Width="74" Grid.Column="1"/>
        <Label x:Name="label1" Content="NIP" HorizontalAlignment="Left" Height="25" Margin="8.15,50,0,0" VerticalAlignment="Top" Width="74" Grid.Column="1"/>
        <Label x:Name="label3" Content="Adres" HorizontalAlignment="Left" Height="25" Margin="8.15,80,0,0" VerticalAlignment="Top" Width="57" Grid.Column="1"/>
        <TextBox x:Name="textBox_nazwa" HorizontalAlignment="Left" Height="25" Margin="6,20,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140" Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox_NIP" HorizontalAlignment="Left" Height="25" Margin="6,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140" Grid.Column="2"/>
        <TextBox x:Name="textBox_adres" HorizontalAlignment="Left" Height="25" Margin="6,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="140" Grid.Column="2"/>
        <Button x:Name="button" Content="Dodaj" Grid.Column="2" HorizontalAlignment="Left" Height="29" Margin="27,110,0,0" VerticalAlignment="Top" Width="105" Click="button_Click"/>

    </Grid>
</Window>
